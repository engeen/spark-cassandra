<p id="notice"><%= notice %></p>

<div class="page-header">
  <%= link_to new_city_path, class: 'btn btn-primary  pull-right' do %>
    <span class="glyphicon glyphicon-plus"></span>
    Новый город
  <% end %>
  <br>
  <br>

  <h1>Список городов</h1>
  <br>
</div>


<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Название</th>
        <th>Внутренний код</th>
        <th>Адм. код</th>
        <th>Tutu код</th>
        <th>Английское название</th>
        <th>iata</th>
        <th>icao</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @cities.each do |city| %>
        <tr>
          <td><%= city.name %></td>
          <td><%= city.inner_code %></td>
          <td><%= city.adm_code %></td>
          <td><%= city.tutu_code %></td>
          <td><%= city.name_eng %></td>
          <td><%= city.iata %></td>
          <td><%= city.icao %></td>

          <td>
            <%= link_to 'Show', city %>
            <span class="glyphicon glyphicon-eye-open"></span>
          </td>
          <td><%= link_to 'Edit', edit_city_path(city) %></td>
          <td><%= link_to 'Destroy', city, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
